
<MainScreen>:
    name: 'mainscreen'
    id:ms
    FloatLayout:
        canvas.before:
            Color:
                rgb: .6, .6, .6
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'bg.jpg'
        Button:
            on_release: app.root.current = 'Afterlogin'
            text: '<< Back'
            font_size: 20
            pos_hint:{'x':.0, 'y':.9}
            size_hint:.2,.1
        Button:
            on_release: app.root.current = 'Newcust'
            text: 'New Customer'
            font_size: 30
            pos_hint:{'x':.3, 'y':.8}
            size_hint:.4,.1

        Button:
            on_release:root.manager.current = 'Neworder'
            text: 'New Order'
            font_size: 30
            pos_hint:{'x':.3, 'y':.65}
            size_hint:.4,.1
        Button:
            on_release: root.view1()
            text: 'View Customers'
            id:viewbtn
            font_size: 30
            pos_hint:{'x':.3, 'y':.5}
            size_hint:.4,.1
        Button:
            on_release: root.view2()
            text: 'View Orders'
            id:vior
            font_size: 30
            pos_hint:{'x':.3, 'y':.35}
            size_hint:.4,.1
        Button:
            on_release: root.manager.current = 'Bill1'
            text: 'Generate Bill'
            id:g_bill
            font_size: 30
            pos_hint:{'x':.3, 'y':0.2}
            size_hint:.4,.1
        Label:
            size_hint:.4,.1
            pos_hint:{'x':.3, 'y':0}

<new_cust>:
    name: 'Newcust'
    text:'Insert Customer'
    font_size:13
    BoxLayout:
        orientation:'vertical'
        canvas.before:
            Color:
                rgb: .6, .6, .6
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'bg.jpg'
        Button:
            text:"<< Back"
            id:backtohome1
            size_hint: .178, 0.7
            size:250,45
            on_release:
                root.manager.current= 'mainscreen'
        Label:
            text:"Insert Customer Record"
            font_size:45
        Label:
            text:"Enter Customer Id"
        TextInput:
            multiline:False
            font_size:20
            id:custid
            write_tab: False
            size_hint: 0.34, 0.6
            pos_hint: {'center_x': 0.5}
        Label:
            text:"Enter Customer Name"
            pos:450,300
        TextInput:
            multiline:False
            font_size:20
            id:custname
            write_tab: False
            size_hint: 0.34, 0.6
            pos_hint: {'center_x': 0.5}
        Label:
            text:"Enter Phone Number"
            pos:450,300
        TextInput:
            multiline:False
            font_size:20
            id:p_no
            write_tab: False
            size_hint: 0.34, 0.6
            pos_hint: {'center_x': 0.5}

        Label:
            size_hint_y: 0.3
        Button:
            text:"Confirm"
            id:insert_cust
            size_hint: 0.2, 0.7
            pos_hint: {'center_x': 0.5}
            on_press: root.new_cus_to_order(custid.text, custname.text, p_no.text  )
        Label:
            size_hint_y: 0.3
<new_order>:
