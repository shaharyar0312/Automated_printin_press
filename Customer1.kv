                    on_press: root.ins_order(orid.text, orname.text, ordate.text, ordatecomplete.text, ordatepay.text, ormaterial.text, fcolor.text, bcolor.text, ordqty.text, ordprice.text,or_cus_id.text)
                    on_release:

