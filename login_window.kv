<loginView>:
    canvas.before:
        Color:
            rgb: .6, .6, .6
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.jpg'

    FloatLayout:
        orientation:'vertical'
        canvas.before:
            Color:
                rgb: .6, .6, .6
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'bg.jpg'
        Label:
            text: "Automated Printing Press"
            font_size: 50
            size_hint:.2,.1
            pos_hint:{'x':.4, 'y':.9}


        Label:
            text:"Username"
            pos_hint:{'x':-.3, 'y':.13}
        TextInput:
            multiline:False
            font_size:20
            id:username1
            write_tab: False
            size_hint:.3,0.07
            pos_hint:{'x':.4, 'y':.6}
        Label:
            text:"Password"
            pos_hint:{'x':-.3, 'y':.03}

        TextInput:
            multiline:False
            font_size:20
            id:password1
            password:True
            write_tab: False
            size:200,45
            size_hint:.3,0.07
            pos_hint:{'x':.4, 'y':.5}
        Button:
            text:"Login"
            size_hint: 0.2, 0.3
            pos_hint:{'x':.43, 'y':0.3}
            size_hint:.25,.1
            on_release:root.validate(username1.text,password1.text)
        Button:
            text:"Create Account"
            size_hint: .09,.08
            id:want_register
            pos_hint:{'x':.5, 'y':0.09}
            background_color: 0,0,0,0
            on_press: root.want()
            on_release: root.leave()
            on_press:root.manager.current='signupView'

